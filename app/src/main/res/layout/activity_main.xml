<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_bg"
    tools:context=".MainActivity">


    <!--    number one button-->
    <Button
        android:id="@+id/button"
        android:style="@style/GreenText"
        android:background="@drawable/button_bg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:onClick="printBtnValue"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <!--    number two button-->
    <Button
        android:id="@+id/button2"
        android:style="@style/GreenText"
        android:background="@drawable/button_bg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:onClick="printBtnValue"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <!--    number three button-->
    <Button
        android:id="@+id/button3"
        android:style="@style/GreenText"
        android:background="@drawable/button_bg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:onClick="printBtnValue"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <!--    number four button-->
    <Button
        android:id="@+id/button4"
        android:background="@drawable/button_bg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="printBtnValue"

        android:text="4"
        android:style="@style/MaroonText"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <!--    number five button-->
    <Button
        android:id="@+id/button5"
        android:layout_width="65dp"
        android:background="@drawable/button_bg"
        android:layout_height="65dp"
        android:onClick="printBtnValue"
        android:style="@style/MaroonText"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <!--    number six button-->
    <Button
        android:id="@+id/button6"
        android:layout_width="65dp"
        android:background="@drawable/button_bg"
        android:layout_height="65dp"
        android:onClick="printBtnValue"
        android:style="@style/MaroonText"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <!--    number seven button-->
    <Button
        android:id="@+id/button7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="printBtnValue"
        android:background="@drawable/button_bg"
        android:text="7"
        android:style="@style/DarkBlueText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <!--    number eight button-->
    <Button
        android:id="@+id/button8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="printBtnValue"
        android:background="@drawable/button_bg"
        android:text="8"
        android:style="@style/DarkBlueText"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
    <!--    number nine button-->
    <Button
        android:id="@+id/button9"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:onClick="printBtnValue"
        android:background="@drawable/button_bg"
        android:text="9"
        android:style="@style/DarkBlueText"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <!--    number zero button-->
    <Button
        android:id="@+id/button10"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:onClick="printBtnValue"
        android:background="@drawable/button_bg"
        android:text="0"
        android:style="@style/RedText"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <!--    To clear number view-->
    <Button
        android:id="@+id/button11"
        android:layout_width="65dp"
        android:layout_height="65dp"


        android:onClick="clearValues"
        android:background="@drawable/button_bg"
        android:text="CLR"
        android:style="@style/RedText"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <!--    Display numbers view-->
    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginTop="52dp"

        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp"
        tools:ignore="MissingConstraints" />

    <!--    Decimal button-->
    <Button
        android:id="@+id/button12"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:background="@drawable/button_bg"
        android:text="."
        android:style="@style/RedText"
        android:onClick="printBtnValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <!--  Division button-->
    <Button
        android:id="@+id/btnDiv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_bg"
        android:text="/"
        android:style="@style/GreenText"
        android:onClick="printBtnValue"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <!--    Multiplication button-->
    <Button
        android:id="@+id/btnMul"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:background="@drawable/button_bg"
        android:text="x"
        android:style="@style/MaroonText"
        android:onClick="printBtnValue"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <!--    ADDITION Button-->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:background="@drawable/button_bg"
        android:text="+"
        android:style="@style/DarkBlueText"
        android:onClick="printBtnValue"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <!--    Subtract button-->
    <Button
        android:id="@+id/btnSub"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:background="@drawable/button_bg"
        android:text="-"
        android:style="@style/RedText"
        android:onClick="printBtnValue"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

    <!--    To perform operation on two operands-->
    <Button
        android:id="@+id/button14"
        android:layout_width="135dp"
        android:layout_height="65dp"

        android:background="@drawable/button_bg"
        android:text="="
        android:style="@style/DarkGreenText"
        android:onClick="Calculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <!--    To clear last digit-->
    <Button
        android:id="@+id/btnBackSpace"
        android:layout_width="138dp"
        android:background="@drawable/button_bg"
        android:text="DEL"
        android:style="@style/DarkGreenText"
        android:onClick="backSpace"
        android:layout_height="65dp"
        app:layout_constraintStart_toEndOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/btnSub" />

    <!--    To calculate Sin theta-->
    <Button
        android:id="@+id/button15"
        android:layout_width="100dp"
        android:layout_height="65dp"

        android:layout_marginTop="72dp"
        android:background="@drawable/button_bg"
        android:onClick="calSin"
        android:text="SIN"
        android:style="@style/GreenText"
        app:layout_constraintStart_toEndOf="@+id/btnDiv"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <!--    To calculate Cos theta-->
    <Button
        android:id="@+id/button16"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:onClick="calCos"
        android:background="@drawable/button_bg"
        android:text="COS"
        android:style="@style/MaroonText"
        app:layout_constraintStart_toEndOf="@+id/btnMul"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <!--    To calculate Tan theta-->
    <Button
        android:id="@+id/button17"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:onClick="calTan"
        android:background="@drawable/button_bg"
        android:text="TAN"
        android:style="@style/DarkBlueText"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <!--    To calculate square root-->
    <Button
        android:id="@+id/button18"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="@drawable/button_bg"
        android:text="Sq.Rt"
        android:style="@style/RedText"
        android:onClick="calSqRoot"
        app:layout_constraintStart_toEndOf="@+id/btnSub"
        app:layout_constraintTop_toBottomOf="@+id/button17" />

<!--    To calculate cube root-->
    <Button
        android:id="@+id/button19"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="@drawable/button_bg"
        android:onClick="calCubeRoot"
        android:style="@style/DarkGreenText"
        android:text="Cb.Rt"
        app:layout_constraintStart_toEndOf="@+id/btnSub"
        app:layout_constraintTop_toBottomOf="@+id/button18" />
</androidx.constraintlayout.widget.ConstraintLayout>